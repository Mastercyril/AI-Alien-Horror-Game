# ============================================
# DESTINY WORLD - ENVIRONMENT CONFIGURATION
# ============================================

# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_OWNER=Mastercyril
GITHUB_REPO=AI-Alien-Horror-Game

# Perplexity Sonar (AI Content Generation)
PERPLEXITY_API_KEY=ppl_your_perplexity_api_key_here
PERPLEXITY_MODE=sonar

# Linear (Task Tracking)
LINEAR_API_KEY=linear_your_api_key_here
LINEAR_TEAM_ID=your_linear_team_id

# Google Drive (Player Data & Assets)
GOOGLE_CREDENTIALS=your_google_service_account_json_here
GOOGLE_FOLDER_ID=your_google_drive_folder_id_here

# Gmail (Feedback & Reports)
GMAIL_SERVICE_ACCOUNT=your_gmail_service_account_here
GMAIL_RECIPIENT=your_email@example.com

# VIVERSE (Game Deployment)
VIVERSE_API_KEY=viverse_your_api_key_here
VIVERSE_GAME_ID=destiny-world-001
VIVERSE_ENVIRONMENT=production

# Build System Configuration
BUILD_MODE=automated
BUILD_TIME=00:00
BUILD_TIMEZONE=UTC
LOG_LEVEL=info

# AI Configuration
AI_OFFLINE_MODE=true
AI_PERPLEXITY_ONLINE=false
AI_LEARNING_RATE=0.75

# Server Configuration
NODE_ENV=production
PORT=3000
LOG_DIR=./logs

# Feature Flags
ENABLE_DAILY_BUILDS=true
ENABLE_AUTO_DEPLOY=true
ENABLE_PERPLEXITY_GENERATION=true
ENABLE_GITHUB_COMMITS=true
